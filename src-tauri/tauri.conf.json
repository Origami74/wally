{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wally",
  "version": "0.1.0",
  "identifier": "com.wally.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Wally",
        "width": 384,
        "height": 512,
        "minWidth": 384,
        "minHeight": 512,
        "maxWidth": 384,
        "maxHeight": 512,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
